{
  "name": "sfu-server",
  "version": "1.0.0",
  "description": "The SFU server powering the STFU application.",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "rm -rf dist && tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "Ayaan Shaikh",
  "license": "ISC",
  "packageManager": "pnpm@10.5.2",
  "dependencies": {
    "@types/express": "^5.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mediasoup": "3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.27.0",
    "@eslint/json": "^0.12.0",
    "@tsconfig/node22": "^22.0.1",
    "@types/cors": "^2.8.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
